/**index.wxss**/

.pink {
  color: #ec90b4;
}

.img {
  position: relative;
}
.img::before {
  content: "";
  display: block;
  padding-top: 100%;
}
image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: block;
}


.logo {
  position: absolute;
  top: 12%;
  left: 34%;
  width: 34%;
}
.logo::before {
  padding-top: calc(33 / 239 * 100%);
}
.title {
  position: absolute;
  top: 33%;
  left: 22%;
  width: 55%;
}
.title::before {
  padding-top: calc(313 / 425 * 100%);
}
.main-form {
  position: absolute;
  bottom: 10%;
  width: 60%;
  left: 20%;
}
.input {
  display: block;
  text-align: center;
  padding: 10rpx 0;
  background: #fff;
  box-shadow: 0 0 4rpx rgba(0, 0, 0, .2);
  border: 2rpx solid #dd759f;
  border-radius: 1000px;
  margin-bottom: 25%;
  font-size: 30rpx;
  color: #ec90b4;
}
.btn {
  width: 280rpx;
  line-height: 70rpx;
}


.welcome.in .title {
  animation: zoomIn .5s cubic-bezier(.44,-0.66,0,1.23), rubberBand 3s infinite 1s;
}
.welcome.in .input {
  animation: moveUp 1s 0s;
}
.welcome.in .btn {
  animation: moveUp 1s .2s;
}
@keyframes moveUp {
  0% { opacity: 0; transform: translate3d(0, 30rpx, 0) }
  100% { opacity: 1; transform: translate3d(0, 0, 0) }
}
@keyframes zoomIn {
  0% { transform: scale(0) }
  100% { transform: scale(1) }
}
@keyframes rubberBand {
  0% { transform: scale3d(1, 1, 1); }
  10% { transform: scale3d(1.25, 0.75, 1); }
  13.3% { transform: scale3d(0.75, 1.25, 1); }
  18.8% { transform: scale3d(1.15, 0.85, 1); }
  21.8% { transform: scale3d(.95, 1.05, 1); }
  25% { transform: scale3d(1.05, .95, 1); }
  33.3% { transform: scale3d(1, 1, 1); }
  100% { transform: scale3d(1, 1, 1); }
}

.flower {
  position: absolute;
  top: 48%;
  left: 50%;
  width: 700rpx;
  height: 700rpx;
  transform: translate(-50%,-50%);
  background-size: 500% 100%;
  background-repeat: no-repeat;
  opacity: 0;
}
.anim .flower {
  animation: fadeIn 1.3s;
}
.anim .flower:nth-child(2) {
  animation-delay: 0s;
}
.anim .flower:nth-child(3) {
  animation-delay: .5s;
}
.anim .flower:nth-child(4) {
  animation-delay: 1s;
}
.anim .flower:nth-child(5) {
  animation-delay: 1.5s;
}
.anim .flower:nth-child(6) {
  animation-duration: 1.8s;
  animation-delay: 2s;
}
@keyframes fadeIn {
  0% { opacity: 0 }
  80% { opacity: 1 }
  100% { opacity: 0 }
}

.light {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 720rpx;
  height: 996rpx;
  margin: -498rpx 0 0 -360rpx;
  opacity: 0;
}
.in .light {
  transform: scale(1.2);
  opacity: 1;
  animation: light 1s infinite linear;
}
.in .light2 {
  animation-delay: -.5s;
}
.in.anim .light {
  transition: opacity 2s 2.5s;
}
@keyframes light {
  0% {transform: scale(1.2) rotate(0)}
  50% {transform: scale(1.2) rotate(0)}
  50.001% {transform: scale(1.2) rotate(10deg)}
  100% {transform: scale(1.2) rotate(10deg)}
}

.prize-box {
  color: #b65d80;
  font-weight: bold;
  text-shadow: 0 0 .2em rgba(0, 0, 0, .1);
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.prize-box > view {
  margin: 20rpx 50rpx;
}
.prize-box .good-text {
  margin-bottom: 80rpx;
}

.name {
  font-size: 1.2em;
}
.tips, .more {
  font-size: .8em;
}

.good-text {
  position: relative;
  width: 350rpx;
}
.good-text::before {
  padding-top: calc(196 / 286 * 100%);
}
.prize-box {
  transform: scale(0);
}
.in .prize-box {
  transform: scale(1);
}
.in.anim .prize-box {
  transition: .8s cubic-bezier(0.175, 0.885, 0.32, 1.275) 3s;
}


.bad-text {
  position: relative;
  width: 250rpx;
  transform: translateY(-60rpx);
}
.bad-text::before {
  padding-top: calc(153 / 235 * 100%);
}