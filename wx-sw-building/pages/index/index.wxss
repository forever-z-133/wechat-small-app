.list {
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx 10rpx;
  background: linear-gradient(#140123, #070031)
}
.item {
  width: calc(50% - 20rpx);
  margin: 10rpx 10rpx;
}
.image {
  position: relative;
}
.image:before {
  content: "";
  display: block;
  padding-top: 75%;
}
.image > image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}