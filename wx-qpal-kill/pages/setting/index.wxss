/* pages/setting/index.wxss */
page {
  background: #fff;
  padding: 30rpx;
}
.tip {
  font-size: .8em;
  color: #999;
}
.line {
  padding: 10rpx 30rpx;
  margin: 10rpx -30rpx;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
button {
  margin: 0;
  line-height: 60rpx;
  padding: 0 30rpx;
  border: 1px solid #eee;
  font-size: .9em;
}