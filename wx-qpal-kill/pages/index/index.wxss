.disable {
  filter: grayscale(1);
  pointer-events: none;
  opacity: .5;
}

.member {
  left: 0;
  bottom: -20rpx;
  width: 245rpx;
  height: 265rpx;
  animation: member 2s linear;
  /* animation: member 2s linear, running 2s infinite linear 2s; */
  /* animation: member-run 2s infinite linear; */
}
@keyframes member {
  0% { transform: translate(-100%, 0) }
  20% { transform: translate(-60%, 0) rotate(5deg) }
  60% { transform: translate(-30%, 0) rotate(-5deg) }
  100% { transform: translate(0, 0) }
}
@keyframes member-run {
  0% { transform: scale(1,1) translate(-100%, 0) }
  50% { transform: scale(1,1) translate(750rpx, 0) }
  50.001% { transform: translate(750rpx, 0) scale(-1,1) }
  100% { transform: translate(-100%, 0) scale(-1,1) }
}
.btn-rule {
  top: 110rpx;
  right: 35rpx;
  width: 164rpx;
  height: 170rpx;
  transform-origin: 82rpx -170rpx;
  animation-duration: 10s;
}
.btn-mine {
  top: 110rpx;
  left: 20rpx;
  width: 135rpx;
  height: 150rpx;
  animation: none;
}
.logo {
  top: 120rpx;
  left: 50%;
  margin-left: -140rpx;
  width: 280rpx;
  height: 35rpx;
}
.main-title {
  top: 140rpx;
  left: 50%;
  margin-left: -200rpx;
  width: 400rpx;
  height: 210rpx;
  /* animation: main-title 1s infinite;  */
}
@keyframes main-title {
  50% {transform: scale(1.01)}
}
.main-box {
  top: 54%;
  left: 50%;
  width: 100%;
  transform: translate(-50%,-50%);
  text-align: center;
}
.date, .time {
  color: #694425;
  display: flex;
  align-items: center;
  justify-content: center;
}
.date-item {
  margin: 0 20rpx;
}
.date-item.active {
  color: #fff;
}
.time-item {
  margin: 30rpx 25rpx;
  width: 250rpx;
  font-weight: bold;
  font-size: 48rpx;
  line-height: 80rpx;
  border: 4rpx solid #e6ca80;
  border-radius: 10rpx;
}
.time-item {
  color: #55371b;
  border-color: #b08d63;
  box-shadow: inset 0 0 10rpx rgba(62,41,17,.2);
  background: #74552f;
}
.time-item.active {
  color: #694425;
  border-color: #e6ca80;
  box-shadow: none;
  background: linear-gradient(#f5dfa5, #ceae66);
}
.prize-view {
  display: flex;
  width: 600rpx;
  margin: 0 auto 35rpx;
  color: #e5cc88;
}
.prize-view .image {
  flex-shrink: 0;
  width: 170rpx;
  margin-right: 30rpx;
}
.prize-view .content {
  position: relative;
  flex-grow: 0;
  text-align: left;
}
.prize-view .title {
  font-size: 36rpx;
  color: #fff;
  line-height: 1;
  margin-bottom: 20rpx;
}
.prize-view .rest {
  font-size: 26rpx;
}
.prize-view .price {
  position: absolute;
  left: 0;
  bottom: 0;
  font-size: 24rpx;
  margin-left: -.1em;
  line-height: 1;
}
.now-price {
  margin-right: 20rpx;
  font-size: 48rpx;
  color: #fff;
}
.now-price:after,
.last-price:after {
  content: "å…ƒ";
  font-size: 24rpx;
}
.timecount {
  color: #fff;
  font-size: 24rpx;
  margin-bottom: 15rpx;
}
.btn-order,
.btn-ordered,
.btn-start {
  width: 400rpx;
  margin: 0 auto;
  font-size: 40rpx;
  line-height: 95rpx;
  border: 5rpx solid #fbf9e9;
  box-shadow: 0 7rpx 21rpx rgba(54,36,13,.6);
  border-radius: 10rpx;
}
.btn-order,
.btn-start {
  color: #9b0c1a;
  border-color: #fbf9e9;
  background: linear-gradient(#fbf9e9, #ede7c6);
}
.btn-ordered {
  color: #694425;
  border-color: #83633d;
  background: linear-gradient(#fdf1d1, #bc9b55);
}
.btn-start:not(.disable) {
   animation: start 1s infinite linear; 
}
@keyframes start {
  50% {transform: scale(1.1)}
}
.for-save {
  left: 50%;
  bottom: 30rpx;
  transform: translate(-50%,0);
}
.for-wechat {
  width: 1220px;
  height: 1800px;
}

.for-save::before {
  content: "";
  position: relative;
  top: -.1em;
  width: 35rpx;
  height: 35rpx;
  margin-right: 10rpx;
  display: inline-block;
  vertical-align: middle;
  background: url(data:image/png;base64,) center / contain;
}

