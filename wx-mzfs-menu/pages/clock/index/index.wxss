/* pages/clock/index/index.wxss */

page {
  padding-bottom: 100rpx;
}
.list-box {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 10rpx;
  margin-top: 20rpx;
  background: #f7f7f7;
}
.list {
  flex-shrink: 0;
  width: calc(50% - 20rpx);
  margin: 0 10rpx;
}
.list .item {
  background: #fff;
  margin-bottom: 20rpx;
}
.list .content {
  padding: 20rpx;
}
.list .desc {
  overflow: hidden;
  margin-bottom: 10rpx;
  text-overflow: ellipsis;
  word-break: break-word;
  display: box;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* ----------------------------------------------------------- 列表项 */
.relative, .user {
  color: #999;
  font-size: .9em;
}
.relative {
  line-height: 1.2em;
}
.user {
  margin-top: 20rpx;
  line-height: 1.2;
}
.user-image {
  width: 2em;
}
.push-time {
  font-size: .9em;
}
