/* ----------------------------------------------------------- 用户信息 */
.user {
  display: flex;
  align-items: center;
}
.user-image {
  flex-shrink: 0;
  width: 2em;
  border-radius: 100%;
  border: 1px solid #999;
  margin-right: 15rpx;
}
.user-content {
  flex-grow: 1;
}

/* ----------------------------------------------------------- 菜单来源 */
.relative::before {
  content: "";
  position: relative;
  top: -1rpx;
  width: 1.2em;
  height: 1.2em;
  display: inline-block;
  vertical-align: middle;
  margin-right: 5rpx;
  background: grey;
}