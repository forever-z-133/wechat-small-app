/**index.wxss**/

.load {
  display: flex;
  justify-content: center;
  align-items: center;
  background: radial-gradient(#ccc, #333)
}
progress {
  width: 50%;
}

.progress {
  width: 50%;
  height: 100rpx;
  background-size: auto 30rpx;
  background-position: 0 40rpx;
  background-repeat: repeat-x;
  overflow: hidden;
}
.progress-bar {
  position: relative;
  height: 100%;
  transition: width .2s linear;
}
.progress-train {
  position: absolute;
  top: 0;
  right: -50rpx;
  width: 300rpx;
  height: 40rpx;
  background-size: 100% 100%;
}
.progress-text {
  font-size: 30rpx;
  margin-top:-30rpx;
  text-align:center;
}


.welcome {
  background: #494b4d;
}
.door-cover,
.door .door-bg {
  background-size: 100% 100%;
}
.door-left,
.door-right {
  position: absolute;
  top:30%;
  width:45%;
  height:55%;
  transition: transform .5s;
}
.door-left {
  left:7%;
}
.door-right {
  right:6%;
}
.open {
  opacity: 0;
  transition: .5s .5s;
}
.open .door-left {
  transform: translate(-100%, 0);
}
.open .door-right {
  transform: translate(100%, 0);
}
.door .mark {
  position: absolute;
  top: 7%;
  width: 15%;
  height: 10%;
  background-size: 100% 100%;
}
.door-left .mark {
  right: 17%;
}
.door-right .mark {
  left: 16%;
}
.door .tip {
  position: absolute;
  top: 50%;
  left: 15%;
  width: 70%;
  margin-top: -1.25em;
  line-height: 2.5em;
  text-align: center;
  font-size: 28rpx;
  color: #8e69a4;
  font-weight: bold;
  background: rgba(255,255,255,.6);
  border-radius: 10rpx;
}
.door .tip:before {
  content: "";
  position: absolute;
  top: 3px;
  left: 3px;
  right: 3px;
  bottom: 3px;
  border: 1px solid #333;
  border-radius: inherit;
}
.door .post {
  position: absolute;
  top: 25%;
  height: 50%;
  width: 40%;
  background-size: 200% 100%;
}
.door .post:before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url(https://sum.kdcer.com/test/img/shake/dot-cover.png) 0 0 / 10rpx 10rpx repeat;
}
.door-left .post {
  right: 12%;
  background-position: 0 0;
}
.door-right .post {
  left: 12%;
  background-position: 100% 0;
}
.btn-rule {
  bottom: 2%;
  left: 25%;
  right: 25%;
  height: 10%;
  background-size: 100% 100%;
  animation: rule 4s infinite linear;
}
@keyframes rule {
  0% {transform: scale3d(1, 1, 1);}
  7% {transform: scale3d(1.25, 0.75, 1);}
  10% {transform: scale3d(0.75, 1.25, 1);}
  12.5% {transform: scale3d(1.15, 0.85, 1);}
  16% {transform: scale3d(.95, 1.05, 1);}
  19% {transform: scale3d(1.05, .95, 1);}
  25% {transform: scale3d(1, 1, 1);}
  100% {transform: scale3d(1, 1, 1);}
}
.logo {
  position: absolute;
  top: 70%;
  left: 50%;
  width: 100rpx;
  height: 100rpx;
  margin: -50rpx 0 0 -50rpx;
  transform-style:preserve-3d;
  transform-origin: center center;
  background-position: cenetr;
  background-repeat: no-repeat;
  background-size: 100% 80%;
  filter: drop-shadow(0 0 1px #000);
  animation: big 3s infinite linear;
}
@keyframes big {
  50% {transform: scale(1.1)}
}
.logo:before,
.logo:after {
  content: "";
  position: absolute;
  left: 50%;
  margin-left: -20rpx;
  bottom: 130%;
  width: 40rpx;
  box-sizing: border-box;
  border: 20rpx solid transparent;
  border-bottom-color: #fff;
  animation: arrow 1s infinite linear .2s;
}
.logo:after {
  bottom: 160%;
  width: 30rpx;
  margin-left: -15rpx;
  border-width: 15rpx;
  animation: arrow 1s infinite linear 0s;
}
@keyframes arrow {
  0% {opacity: 1; transform: translate(0, 0)}
  50% {opacity: 0; transform: translate(0, -100%)}
  80% {opacity: 0; transform: translate(0, -100%)}
  81% {opacity: 0; transform: translate(0, 50%)}
  100% {opacity: 1; transform: translate(0, 0)}
}


.station-name {
  top: 19%;
  left: 13%;
  font-size: 16rpx;
  color: #7b6d78;
}
.station-name > text {
  font-size: .8em;
