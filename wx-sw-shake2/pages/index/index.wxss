}
.word text {
  color: #6a3432;
  flex-grow: 1;
  word-break: break-all;
}
.word view {
  flex-shrink: 0;
}
.result .btn-red {
  margin-top: 30rpx;
}

.good .modal-box,
.good2 .modal-box {
  position: absolute;
  top: 50%; left: 50%;
  transform: translate(-50%,-50%);
}
.good, .good2 {
