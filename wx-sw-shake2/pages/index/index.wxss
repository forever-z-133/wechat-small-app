  transform: rotate(30deg)
}
.result .modal-box {
  position: absolute;
  top: 50%; left: 50%;
  transform: translate(-50%,-50%);
}
.qrcode {
  position: relative;
  margin: 0 auto 30rpx;
  width: 300rpx;
  height: 300rpx;
