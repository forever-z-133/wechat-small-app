.start .modal-box {
  position: absolute;
  top: 50%; left: 50%;
  transform: translate(-50%,-50%);
  color: #fff;
  text-align: center;
}
.shake-count {
  font-size: 120rpx;
  /* width: 120rpx; */
  height: 120rpx;
  line-height: 120rpx;
  padding: 30rpx;
  font-weight: bold;
  /* border: 1px solid; */
  border-radius: 100%;
  margin: 0 auto;
}
.shake-count:before {
  content: "";
}
.shake-count.active:before {
  animation: shake_count 2s linear;
}
@keyframes shake_count {
  0% {content: "Ready"}
  50% {content: "GO"}
  100% {content: "GO"}
  /* 100% {filter: blur(10px)} */
}
.shake-text {
  font-size: 60rpx;
  margin: 100rpx auto 40rpx;
}
.shake-image {
  padding: 40rpx;
  margin: 0 auto;
  width: 135rpx;
  height: 135rpx;
  border-radius: 100%;
  background: rgba(0,0,0,.5);
}
.shake-image image {
  height: 100%;
  animation: shake_hand .5s infinite linear;
}
@keyframes shake_hand {
  50% {transform: rotate(15deg);}
}

.bling {
  transform: scale(1.2);
  background-size: 100% 100%;
  animation: light .5s infinite linear;
}
@keyframes light {
  0% {transform: scale(1.2) rotate(0deg)}
  50% {transform: scale(1.2) rotate(0deg)}
  51% {transform: scale(1.2) rotate(8deg)}
  100% {transform: scale(1.2) rotate(8deg)}
}

.justify .modal-box {
  position: absolute;
  top: 50%; left: 50%;
  transform: translate(-50%,-50%);
}

.question image {
  width: 500rpx;
  height: 75px;
}
.answers {
  margin: 10rpx auto;
  text-align: center;
  overflow: hidden;
  display: flex;
}
.answers image {
  width: 110rpx;
  height: 110rpx;
  margin: 10rpx 10rpx;
}
.answers image.active {
  box-shadow: 0 0 0 1px red;
}

.modudu .right,
.modudu .wrong {
  width: 100%;
  height: 100%;
}
.modudu .other {
  position: absolute;
  top: 0;
  right: 0;
  width: 250rpx;
  height: 200rpx;
  padding: 0 30rpx 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  background-size: 100% 100%;
  color: #ab0a07;
  font-size: 40rpx;
  box-sizing: border-box;
}

.prize .modal-box {
  height: 100%;
}
.prize .light {
  position: absolute;
  top: 50%;
  left: 0;
  width: 750rpx;
  height: 750rpx;
  margin-top: -375rpx;
  background-size: 100% 100%;
  animation: rotate .5s infinite linear;
}
.prize .box {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 280rpx;
  height: 280rpx;
  background-size: contain;
  background-position: center;
  background-repeat: no-repeat;
}
@keyframes rotate {
  0% {transform: rotate(0deg)}
  50% {transform: rotate(0deg)}
  51% {transform: rotate(8deg)}
  100% {transform: rotate(8deg)}
}
.prize .finger {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 100rpx;
  height: 100rpx;
  background: rgba(255,255,255,.8);
  border-radius: 100%;
  animation: scale 1s infinite;
}
.prize .finger:before {
  content: "";
  position: absolute;
  top: 15%; left: 15%;
  right: 15%; bottom: 15%;
  background: rgba(255,255,255,.8);
  border-radius: 100%;
  animation: scale 1s infinite .2s;
}
.prize button {
  position: static;
}
@keyframes scale {
  50% {transform: scale(0.9)}
}


.result {
  font-size: 30rpx;
  color: #ab0904;
}
.result .modudu:before {
  content: "";
  position: absolute;
  z-index: 1;
  top: 230rpx;
  left: 80rpx;
  width: 100rpx;
  height: 160rpx;
  background-image: url(https://sum.kdcer.com/test/img/shake/modudu22.png);
