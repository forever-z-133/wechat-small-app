/* pages/login/index.wxss */

.copyright {
  position: fixed;
  left: 0; right: 0;
  bottom: 3%;
  font-size: .8em;
  text-align: center;
  color: #ddd;  
}

.head-image::before {
  padding-top: calc(530 / 935 * 100%);
}

.form {
  padding: 100rpx 40rpx 0;
  width: 70%;
  margin: 0 auto;
  display: block;
}
.form-group {
  padding: 0 0 15rpx;
  border-bottom: 2rpx solid #E5E5E5;
}
input {
  height: 2.5em;
  line-height: 2.5em;
  font-size: 34rpx;
}
.placeholder {
  color: #ddd;
}
.icon {
  width: 1em;
  height: 1em;
  object-fit: contain;
  margin-right: 30rpx;
  display: block;
  flex-shrink: 0;
}


.btn-getMsgCode {
  padding: 0;
  width: 8em;
  font-size: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #7F7F7F;
  background: #F4F4F4;
  border-radius: 1000em;
}
.btn-blue {
  color: #fff;
  background: #488FFB;
}

.btn-login {
  margin-top: 120rpx;
  height: 2.8em;
  line-height: 2.8em;
  color: #fff;
  background: #488FFB;
  border-radius: 1000em;
}
.btn.disabled {
  color: #ddd;
  background: #F8F8F8;
  pointer-events: none;
}

.title {
  font-size: 36rpx;
  color: #000;
  font-weight: bold;
}


.btn-to-register {
  text-align: center;
  font-size: 28rpx;
  color: #488FFA;
  margin-top: 52rpx;
}