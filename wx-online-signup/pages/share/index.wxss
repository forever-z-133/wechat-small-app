/* pages/share/index.wxss */

.wrap {
  position: absolute;
  top: 0; bottom: 0;
  left: 0; right: 0;
  padding: 6.5% 10% 8% 10%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.pic-box {
  background: rgb(104,170,254);
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 10rpx 30rpx rgba(104,170,254,.3);
}
.pic-box::before {
  padding-top: calc(844 / 560 * 100%);
}
