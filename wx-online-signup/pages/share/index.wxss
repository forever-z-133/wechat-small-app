/* pages/share/index.wxss */

.wrap {
  position: absolute;
  top: 0; bottom: 0;
  left: 0; right: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.pic-box {
  width: 100%;
  height: calc(100% - 5% - 200rpx);
  border-radius: 10rpx;
  overflow: hidden;
}
canvas {
  width: 100%;
  height: 100%;
}

.footer {
  position: absolute;
  bottom: 5%;
  left: 50%;
  transform: translateX(-50%);
  font-size: 30rpx;
}
.btn {
  height: 86rpx;
  line-height: 86rpx;
  margin: 0 15rpx;
  flex-basis: 250rpx;
  text-align: center;
  border-radius: 43rpx;
  padding: 0 3em;
}
.btn-save {
  color: #488FFA;
}
.btn-share {
  color: #fff;
  background: #488FFA;
}