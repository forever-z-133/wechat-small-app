.footer {
  display: flex;
  flex-shrink: 0;
  justify-content: space-between;
  margin-top: 50rpx; 
}
.btn {
  font-size: 34rpx;
  line-height: 1;
  height: 86rpx;
  margin: 0 15rpx;
  flex-grow: 1;
  flex-basis: 250rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #488FFA;
  border-radius: 10rpx;
}
.btn-save {
  border: 1px solid;
}
.btn-share {
  color: #fff;
  background: #488FFA;
}