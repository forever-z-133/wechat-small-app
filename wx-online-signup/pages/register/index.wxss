/* pages/login/index.wxss */

.copyright {
  position: fixed;
  left: 0; right: 0;
  bottom: 3%;
  font-size: .8em;
  text-align: center;
  color: #ddd;  
}

.logo {
  position: absolute;
  top: 12%;
  left: 10%;
  width: 80%;
  height: 10%;
}
.logo image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.form {
  padding: 30rpx 55rpx 50rpx;
  display: block;
  margin: 350rpx 60rpx 50rpx;
  background: #fff;
  border-radius: 14rpx;
}
.form-group {
  padding: 0 0 15rpx;
  border-bottom: 2rpx solid #E5E5E5;
}
input, picker {
  font-size: 30rpx;
  height: 2.5em;
  line-height: 2.5em;
  flex-grow: 1;
}
.placeholder {
  color: #ddd;
}


.btn-getMsgCode {
  width: 7em;
  font-size: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #7F7F7F;
  background: #F4F4F4;
  border-radius: 1000em;
}

.btn-register {
  margin-top: 60rpx;
  height: 2.8em;
  line-height: 2.8em;
  color: #fff;
  background: #488FFB;
  border-radius: 1000em;
}
.btn.disabled {
  color: #ddd;
  background: #F8F8F8;
  pointer-events: none;
}
.btn-to-login {
  text-align: center;
  font-size: 28rpx;
  color: #488FFA;
  margin-top: 52rpx;
}

.title {
  font-size: 36rpx;
  color: #000;
  font-weight: bold;
}
.login-list .list-item.add {
  text-align: center;
  display:block;
}

.icon {
  width: 1em;
  height: 1em;
  flex-shrink: 0;
  object-fit: contain;
  margin-right: 15rpx;
}
.icon-arrow {
  width: .5em;
  height: .9em;
  margin-left: 15rpx;
  margin-right: 0;
}

.btn-blue {
  color: #fff;
  background: #488FFB;
}