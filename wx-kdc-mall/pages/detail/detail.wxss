/* pages/detail/detail.wxss */
page {
  padding-bottom: 110rpx;
}
.banner-swiper {
  height: 750rpx;
}

.top-tool {
  position: fixed;
  top: 0;
  right: 0;
  z-index: 2;
  padding: 25rpx 25rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.btn-none {
  padding: 0;
  margin: 0;
  font: inherit;
  line-height: inherit;
  background: none;
}
.btn-none::after {
  display: none;
}
.top-tool .btn {
  border-radius: 100%;
  margin-left: 15rpx;
  background: rgba(0, 0, 0, .5);
}
.icon {
  width: 1.5em;
  height: 1.5em;
  display: block;
  background-repeat: no-repeat;
  background-position: center;
  background-size: auto 90%;
}
.top-tool .icon {
  width: 1.8em;
  height: 1.8em;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}
.icon-share::before,
.icon-tel::before,
.icon-cart::before,
.icon-order::before {
  content: "\271A";
}

.info {
  padding: 25rpx 25rpx;
}
.price {
  color: #ff5c00;
  margin: 8rpx 0 5rpx;
}
.prev, .other {
  color: #747474;
}
.prev-time > text {
  color: #000;
}
.prev-desc > text {
  display: block;
}
.other {
  display: flex;
  font-size: .6em;
}
.other > view {
  margin-right: 50rpx;
}

.section-head {
  position: relative;
  text-align: center;
  background: #f4f4f4;
  color: #a8a8a8;
  font-size: .8em;
  line-height: 90rpx;
  margin: 0 -25rpx;
  transform: translate3d(0,0,0);
}
.detail-content {
  padding: 0 25rpx;
}
.icon-content {
  display: inline-block;
  vertical-align: middle;
  position: relative;
  top: -.1em;
  width: 1.1em;
  height: 1.1em;
  margin-right: 15rpx;
  background-image: url(data:image/png;base64,)
}
.section-head:before {
  content: "";
  position: absolute;
  z-index: -1;
  top: 50%;
  left: 50%;
  width: 50%;
  height: 2rpx;
  transform: translate(-50%,-50%);
  background: #a8a8a8;
}
.section-head > view {
  display: inline-block;
  padding: 0 1em;
  background: #f4f4f4;
}

.detial-foot {
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
}
.detial-foot button {
  border-radius: 0;
  height: 100%;
  flex-grow: 1;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.btn-cart {
  color: #fff;
  background: #f5a623;
}
.btn-buy {
  color: #fff;
  background: #ff7100;
}
.btn-shop {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  line-height: 1;
  font-size: .7em;
}
.icon-shop {
  width: 2em;
  height: 2em;
  margin-bottom: 5rpx;
  background-image: url(data:image/png;base64,);
}

.modal-box {
  background: #fff;
  max-height: 60%;
}
.modal-info {
  display: flex;
  padding: 15px 25rpx;
}
.modal-price {
  color: #ff5c00;
}
.modal-store {
  font-size: .7em;
}
.modal-image {
  width: 180rpx;
  flex-shrink: 0;
  border-radius: 10rpx;
  overflow: hidden;
  margin-top: -70rpx;
  margin-right: 20rpx;
}
.panel-body {
  height: 100%;
}
.btn-confirm-to-add-cart {
  border-radius: 0;
  color: #fff;
  background: #f6a522;
}
.btn-confirm-to-add-cart:after {
  display: none;
}


.radio-box {
  display: block;
}
.radio-box.disable text {
  color: #aaa;
  pointer-events: none;
}
.radio-box.active text {
  color: #fff;
  background: #ff7100
}
.radio-box radio {
  position: absolute;
  opacity: 0;
}
.radio-box > text {
  font-size: .8em;
  margin: 5rpx 15rpx 5rpx 0;
  padding: 4rpx 20rpx;
  background: #f0f0f0;
  border-radius: 6rpx;
  display: block;
}
.choose-part {
  padding: 15rpx 25rpx;
  border-bottom: 2rpx solid #f0f0f0;
}
.radio-group {
  display: flex;
  flex-wrap: wrap;
}
.choose-part-title {
  margin: 0 0 10rpx;
}


.modal-number-box {
  display: flex;
  padding: 15rpx 25rpx;
  align-items: center;
  justify-content: space-between;
  border-bottom: 2rpx solid #f0f0f0;
  margin-bottom: 15rpx;
}
.modal-number {
  display: flex;
  align-items: center;
}
.modal-number button {
  width: 2em;
  line-height: 2em;
  padding: 0;
}
.modal-number text {
  margin: 0 20rpx;
}