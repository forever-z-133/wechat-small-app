/* list 列表组件 */

.list {
  display: flex;
  flex-wrap: wrap;
}
.list-item {
  position: relative;
  flex-shrink: 0;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}
.list-image {
  position: relative;
  width: 100%;
  flex-shrink: 0;
}
.list-image:before {
  content: "";
  display: block;
  padding-top: 100%;
}
.list-image.normal::before {
  padding-top: 56.25%;
}
.list-image.slide::before {
  padding-top: 75%;
}
.list-image > image {
  position: absolute;
  top: 0;
  left: 0;
}
.list-content {
  flex-grow: 1;
  overflow: hidden;
}
.list-title,
.list-desc {
  min-height: 1em;
}
.list-tip {
  font-size: 28rpx;
  text-align: center;
  color: #ccc;
  width: 100%;
  line-height: 80rpx;
  margin: 10rpx 0;
}
.list-tip.load::before {
  content: '数据加载中...';
}
.list-tip.empty::before {
  content: '数据就这些了';
}
.text {
  word-wrap: normal;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.text2 {
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-word;
  display: box;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 列表样式，tabs ////////////////// list-tabs */
.list-tabs {
  padding: 20rpx 0;
}
.list-tabs .list-item {
  flex-grow: 1;
}
.list-tabs .list-image {
  width: 80%;
  margin: 0 auto 10rpx;
}
.list-tabs .desc {
  display: none;
}

/* 列表样式，字在图上 ////////////// list-text-cover */
.list-text-cover .list-content {
  position: absolute;
  top: 50%; left: 50%;
  transform: translate(-50%,-50%);
  text-align: center;
  width: 100%;
}
/* 产品列表 ////////////// list-text-cover product-list */
.product-list .list-image:before {
  padding-top: 56.25%;
}
.product-list .list-item {
  width: 100%;
  margin-top: 20rpx;
}
.product-list .list-item:first-of-type {
  margin-top: 0;
}
/* 三栏紧挨 ////////////// list-text-cover type-list */
.type-list {
  margin: -5rpx 15rpx;
}
.type-list .list-item {
  width: calc(100% / 3 - 10rpx);
  margin: 5rpx 5rpx;
}
/* 购物车 ////////////// list-cart */
.list-cart .list-item {
  display: flex;
  padding: 25rpx 25rpx;
  border-bottom: 2rpx solid #dedede;
}
.list-cart .list-image {
  width: 150rpx;
  margin-right: 20rpx;
}