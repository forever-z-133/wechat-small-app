/**index.wxss**/

page {
  padding-top: 100rpx;
}

.header {
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  line-height: 100rpx;
  overflow: hidden;
}
.place-name {
  flex: 0 0 auto;
}
.place-name::before {
  content: "";
  width: 1.2em;
  height: 1.2em;
  margin-right: 5rpx;
  display: inline-block;
  vertical-align: middle;
  background: url(data:image/png;base64,) center / auto 100% no-repeat;
}
.place-address {
  color: #969293;
  font-size: .8em;
  margin: 0 25rpx;
  flex: 1 1 auto;
}
.more-place {
  color: #fe5f31;
  flex: 0 0 auto;
  margin: 0 -30rpx;
  padding: 0 30rpx;
  text-align: right;
}


.user-image {
  width: 230rpx;
  margin: 40rpx auto;
}

.gms-box {
  display: flex;
  padding: 0 50rpx;
  text-align: center;
}
.box-item {
  flex: 1 0 calc(50% - 60rpx);
  margin: 0 20rpx;
  font-size: 1.1em;
  padding: 40rpx 10rpx;
  border-radius: 15rpx;
}
.gms-box .label {
  font-size: 1.1em;
  margin-bottom: 10rpx;
}
.orange-box {
  color: #fff;
  background: #fe7e57;
}
.yellow-box {
  color: #fff;
  background: #fecb32;
}


.banner-list {
  margin-top: 40rpx;
}
.banner-item {
  margin: 0 35rpx 35rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0,.2);
}
.banner-image::before {
  padding-top: calc(220 / 685 * 100%);
}



.place-box {
  background: #fff;
}
.list-other {
  order: 99;
  text-align: right;
  font-size: .8em;
}
.place-choose {
  width: 1em;
  height: 1em;
  margin-right: 10rpx;
  display: inline-block;
  background-size: 100% auto;
  background-position: center;
  background-repeat: no-repeat;
}
.place-choose.choosen {
  background-image: url(data:image/png;base64,);
}