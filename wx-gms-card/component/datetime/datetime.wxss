
.datetime {
  text-align: center;
}
.head-month {
  color: #333;
  font-size: 40rpx;
  line-height: 2em;
}
.body > .top,
.body > .list {
  display: flex;
  flex-wrap: wrap;
}
.body .item {
  width: calc(100% / 7);
}
.body .top {
  color: #333;
  font-size: 26rpx;
  line-height: 70rpx;
  background: #f3f3f3;
  padding: 0 5rpx;
}
.body .list {
  font-size: 30rpx;
  padding: 5rpx 5rpx;
}
.body .list .item {
  width: calc(100% / 7 - 10rpx);
  margin: 5rpx 5rpx;
}
