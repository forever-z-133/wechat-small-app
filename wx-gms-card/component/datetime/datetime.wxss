.day {
  position: relative;
}
.day:before {
  content: "";
  display: block;
  padding-top: 100%;
}
.out {
  color: #ccc;
}
.day > view,
.day > navigator,
.day > text {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}