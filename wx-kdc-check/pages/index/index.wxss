page {
  background: #efeff4;
}
.welcome {
  padding-top: 30%;
}
.title {
  text-align: center;
  /* font-weight: bold; */
  font-size: 1.2em;
  margin: 40rpx 30rpx;
}
.header {
  padding: 50rpx 30rpx;
  display: flex;
  /* justify-content: space-between; */
}
.btn {
  margin: 30rpx 30rpx;
}
.message-box {
  background: #fff;
  border-top: 1px solid #e5e5e5;
  border-bottom: 1px solid #e5e5e5;
}
.item {
  padding: 30rpx 30rpx 30rpx 0;
  margin-left: 30rpx;
  border-bottom: 1px solid #e5e5e5;
  display: flex;
  overflow: hidden;
}
.label {
  width: 4em;
  margin-right: 35rpx;
  flex-shrink: 0;
}
.content {
  color: #8e8e8e;
  flex-grow: 1;
  text-align: justify
}
.ok {
  color: #22bf0a;
}
.bad {
  color: #e94f4f;
}