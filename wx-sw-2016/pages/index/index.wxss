/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.body,
.bg,
.video-box,
.cover,
.video-box > video {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
.video-box > video {
  width: 100%;
  height: 100%;
  opacity: 0;
  z-index: -1;
  display: none;
}
.video-box.active > video {
  opacity: 1;
  z-index: 1;
  display: block;
}
.cover {
  background: url(https://sum.kdcer.com/test/wx-sw-scan/img/welcome.jpg) center / cover;
}