.body {
  background: url(https://sum.kdcer.com/test/wx-sw-scan/img/card_bg.jpg) center / cover;
}
.top-btn {
  display: flex;
  justify-content: center;
  padding: 5px 10px 0;
}
.btn {
  position: relative;
}
.btn:before {
  content: "";
  padding-top: 60%;
  display: block;
}
.btn {
  width: 25%;
}
button:after {
  display: none;
}
.btn-card {
  background: url(https://sum.kdcer.com/test/wx-sw-scan/img/card_btn-sm.png) center / contain no-repeat;
}
.btn-map {
  background: url(https://sum.kdcer.com/test/wx-sw-scan/img/map_btn-sm.png) center / contain no-repeat;
}
.btn-rule {
  background: url(https://sum.kdcer.com/test/wx-sw-scan/img/rule_btn_sm.png) center / contain no-repeat;
}
.btn-share {
  background: url(https://sum.kdcer.com/test/wx-sw-scan/img/share_btn_sm.png) center / contain no-repeat;
}
.btn-scan {
  background: url(https://sum.kdcer.com/test/wx-sw-scan/img/scan_btn_sm.png) center / contain no-repeat;
}


.main {
  margin: 20rpx 0 0;
  flex-grow: 1;
  height: calc(100vh - 100rpx);
  text-align: center;
  color: #634338;
}
.item {
  display: flex;
  flex-direction: column;
}
.image {
  position: relative;
  margin: 0 5%;
  padding: 15rpx 0;
  border-top: 1px dashed red;
  border-bottom: 1px dashed red;
  box-sizing: border-box;
}
.image image {
  width: 750rpx;
  height: 630rpx;
  margin: 0 -5%;
  display: block;
}
.mark {
	position: absolute;
	width: 30vw;
  height: 30vw;
  background-position: center;
  background-size: cover;
  background-repeat: no-repeat;
  opacity: 0;
  transform: scale(4);
  z-index: -1;
}
.active .mark {
  z-index: 1;
  opacity: 1;
  transform: scale(1);
  transition: .15s .4s;
}
