}
.slide {
  overflow: hidden;
  background: rgba(221,189,157,.7);
  box-shadow: inset 0 0 30rpx rgba(0,0,0,.1);
}
.slide-wrap {
  height: 100%;
  min-height: 250rpx;
  padding: 0 0 2%;
  box-sizing: border-box;
  display: flex;
  align-items: flex-end;
}
.one image {
